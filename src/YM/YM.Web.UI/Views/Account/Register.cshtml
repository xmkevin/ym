@{
    ViewBag.Title = "Register";
}

<div id="signup">
        <h3>New Here? Join Today!</h3>
        <form action="@Url.Content("~/api/register")" method="POST">
			<span class="error-summary"></span>
			<div class="clearfix">
    			<input class="input-xlarge" name="displayName" type="text" placeholder="Full Name" />
				<span class="help-inline"></span>
			</div>

			<div class="clearfix">
                <input class="input-xlarge" name="email" type="text" placeholder="Email" />
                <span class="help-inline"></span>
			</div>

			<div class="clearfix">
                <input class="input-xlarge" name="password" type="password" placeholder="Password" />
                <span class="help-inline"></span>
			</div>

			<div class="clearfix">
				<label class="checkbox inline">
					<input class="input-xlarge" name="AutoLogin" type="checkbox" checked />
                    Auto sign-in
				</label>
				<span class="help-inline"></span>
			</div>

            <br />

			<div class="actions">
			    <button class="btn" type="submit">Sign up</button>
                or <a data-cmd="signIn">sign in</a>
			</div>
        </form> 
    </div>
